
<h3><a class="btn btn-primary" href="/book"<i class="fa fa-plus"></i>Add New Book</a></h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Book Name</th>
            <th>Author</th>
            <th>Summary</th>
            <th>Publication</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.bookName}}</td>
            <td>{{this.author}}</td>

            <td>{{this.summary}}</td>
            <td>{{this.publication}}</td>
            <td>{{this.genre}}</td>
            <td>
                <a href="/book/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/book/delete/{{this._id}}"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>